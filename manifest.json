{
  "manifest_version": 2,
  "name": "Jett's Magna Badminton Alert",
  "version": "1.3",
  "description": "Monitors multiple Magna badminton class pages and alerts you with weekday/session info when spots open.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "https://newmarket.perfectmind.com/Clients/BookMe4LandingPages/Class*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": { "128": "icon.png" }
  },
  "icons": {
    "128": "icon.png"
  }
}
