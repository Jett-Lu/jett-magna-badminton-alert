{
  "manifest_version": 3,
  "name": "Jett's Magna Badminton Alert",
  "version": "1.2",
  "description": "Monitors your current Magna Badminton class page and notifies you when any spot opens.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://newmarket.perfectmind.com/Clients/BookMe4LandingPages/Class*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon.png"
    }
  },
  "icons": {
    "128": "icon.png"
  }
}