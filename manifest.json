{
  "manifest_version": 2,
  "name": "Magna Badminton Alert",
  "version": "2.4",
  "description": "Monitor a PerfectMind class detail page and notify when a session becomes available.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "https://newmarket.perfectmind.com/Clients/BookMe4LandingPages/Class*"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}