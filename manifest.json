{
  "manifest_version": 2,
  "name": "Jett's Magna Badminton Alert",
  "version": "1.3",
  "description": "Monitor up to 4 badminton class pages, get weekday/session alerts.",
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "https://newmarket.perfectmind.com/Clients/BookMe4LandingPages/Class*"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "128": "icon.png"
  }
}
